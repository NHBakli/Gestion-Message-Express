
<div class="container my-5">
        <h1 class="text-center mb-4"><%= pageTitle %></h1>

        <div class="row row-cols-1 row-cols-md-2 g-4">
                <% messages.forEach(message => { %>
                        <div class="col">
                                <div class="card h-100">
                                        <div class="card-body">
                                                <h5 class="card-title"><%= message.title %></h5>
                                                <p class="card-text"><%= message.message %></p>
                                                <p class="card-footer text-muted">Auteur : <%= message.author %></p>
                                        </div>
                                </div>
                        </div>
                <% }); %>
        </div>

        <div class="mt-5">
                <section>
                        <h2 class="mb-4">Envoyer un message</h2>
                        <form method="post" action="/">
                                <div class="row g-3 mb-3">
                                        <div class="col-md-6">
                                                <input type="text" name="title" id="title" class="form-control" placeholder="Titre">
                                        </div>
                                        <div class="col-12">
                                                <textarea name="message" id="message" class="form-control" placeholder="Message" rows="4"></textarea>
                                        </div>
                                        <div class="col-md-6">
                                                <input type="text" name="author" id="author" class="form-control" placeholder="Username">
                                        </div>
                                </div>
                                <div class="d-flex justify-content-start">
                                        <button type="submit" class="btn btn-primary">Envoyer</button>
                                </div>
                        </form>
                </section>
        </div>